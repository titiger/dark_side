<?xml version="1.0" standalone="no"?>

<unit>
	<parameters>
		<size value="1"/>
		<height value="2"/>
		<max-hp value="550" regeneration="4"/>
		<max-ep value="250" regeneration="10"/>
		<armor value="10"/>
		<armor-type value="leather"/>					
		<sight value="12"/>
		<time value="90"/>	
		<multi-selection value="true"/>	
		<cellmap value="false"/>
		<levels/>
		<fields>
			<field value="land"/>
		</fields>	
		<properties/>
		<light enabled="false"/>
		<unit-requirements>
			<unit name="sorcery_runes"/>
		</unit-requirements>
		<upgrade-requirements/>
		<resource-requirements>
			<resource name="gold" amount="160"/>
			<resource name="energy" amount="1"/>
		</resource-requirements>
		<resources-stored/>
		<image path="images/sorceress.bmp"/>
		<image-cancel path="../dark_elder/images/dark_magic_cancel.bmp"/>
		<meeting-point value="false" image-path="../incantation_shrine/images/meeting_point.bmp"/>
		<selection-sounds enabled="true">
			<sound path="sounds/select2.wav"/>
			<sound path="sounds/select3.wav"/>
			<sound path="sounds/select5.wav"/>
			<sound path="sounds/select6.wav"/>
			<sound path="sounds/select7.wav"/>
		</selection-sounds>
		<command-sounds enabled="true">
			<sound path="sounds/ack1.wav"/>
			<sound path="sounds/ack2.wav"/>
			<sound path="sounds/ack3.wav"/>
			<sound path="sounds/ack4.wav"/>
			<sound path="sounds/ack5.wav"/>
		</command-sounds>
	</parameters>

	<skills>
		<skill>
			<type value="stop"/>
			<name value="stop_skill"/>		
			<ep-cost value="0"/>
			<speed value="1000"/>
			<anim-speed value="40"/>
			<animation path="models/standing.g3d"/>
			<sound enabled="false"/>
		</skill>
		
		<skill>
			<type value="move"/>
			<name value="move_skill"/>		
			<ep-cost value="0"/>
			<speed value="180"/>
			<anim-speed value="90"/>
			<animation path="models/walking.g3d"/>
			<sound enabled="false"/>
		</skill>

		<skill>
			<type value="produce"/>
			<name value="conjure_skill"/>		
			<ep-cost value="0"/>
			<speed value="250"/>
			<anim-speed value="40"/>
			<animation path="models/producing.g3d"/>
			<sound enabled="true" start-time="0.3">
				<sound-file path="sounds/conjure1.wav"/>
				<sound-file path="sounds/conjure2.wav"/>
			</sound>
		</skill>

		<skill>
			<type value="attack"/>
			<name value="attack_skill"/>		
			<ep-cost value="50"/>
			<speed value="60"/>
			<anim-speed value="60"/>
			<animation path="models/attacking.g3d"/>
			<sound enabled="true" start-time="0.6">
				<sound-file path="sounds/crazy-bat.wav"/>
			</sound>
			<attack-strenght value="180"/>
			<attack-var value="50"/>
			<attack-range value="8"/>
			<attack-type value="energy"/>
			<attack-fields>
				<field value="land"/>
			</attack-fields>
			<attack-start-time value="0.7"/>
			<projectile value="true">
				<particle value="true" path="particle_proj.xml"/>
				<sound enabled="true">
					<sound-file path="sounds/hit1.wav"/>
					<sound-file path="sounds/hit2.wav"/>
					<sound-file path="sounds/hit3.wav"/>
				</sound>
			</projectile>
			<splash value="true">
				<radius value="1"/>
				<damage-all value="true"/>
				<particle value="true" path="particle_splash.xml"/>
			</splash>
		</skill>

		<skill>
			<type value="die"/>
			<name value="die_skill"/>		
			<ep-cost value="0"/>
			<speed value="20"/>
			<anim-speed value="20"/>
			<animation path="models/dying.g3d"/>
			<sound enabled="true" start-time="0">
				<sound-file path="sounds/die1.wav"/>
				<sound-file path="sounds/die2.wav"/>
				<sound-file path="sounds/die3.wav"/>
			</sound>			
			<fade value="false"/>
		</skill>
	</skills>
	
	<commands>
		<command>
			<type value= "stop"/>
			<name value="stop"/>
			<image path="../dark_elder/images/dark_magic_stop.bmp"/>
			<unit-requirements/>
			<upgrade-requirements/>
			<stop-skill value="stop_skill"/>
		</command>

		<command>
			<type value= "move"/>
			<name value="move"/>
			<image path="../dark_elder/images/dark_magic_move.bmp"/>
			<unit-requirements/>
			<upgrade-requirements/>
			<move-skill value="move_skill"/>
		</command>

		<command>
			<type value= "attack"/>
			<name value="magic_blast"/>
			<image path="images/attack.bmp"/>
			<unit-requirements/>
			<upgrade-requirements/>
			<move-skill value="move_skill"/>
			<attack-skill value="attack_skill"/>
		</command>

    <command>
			<type value="attack_stopped"/>
			<name value="hold_position"/>
			<image path="../dark_elder/images/dark_magic_hold.bmp"/>
			<unit-requirements/>
			<upgrade-requirements/>
			<stop-skill value="stop_skill"/>
			<attack-skill value="attack_skill"/>
		</command>
		
		<command>
			<type value="produce"/>
			<name value="conjure_dragon" />
			<image path="../dragon/images/dragon.bmp"/>
			<unit-requirements />
			<upgrade-requirements />
			<produce-skill value="conjure_skill"/>
			<produced-unit name="dragon"/>
		</command>

		<command>
			<type value="produce"/>
			<name value="conjure_daemon" />
			<image path="../daemon/images/daemon.bmp"/>
			<unit-requirements/>
			<upgrade-requirements/>
			<produce-skill value="conjure_skill"/>
			<produced-unit name="daemon"/>
		</command>

		<command>
			<type value="produce"/>
			<name value="conjure_hellbat" />
			<image path="../hellbat/images/hellbat.bmp"/>
			<unit-requirements/>
			<upgrade-requirements/>
			<produce-skill value="conjure_skill"/>
			<produced-unit name="hellbat"/>
		</command>
	</commands>
</unit>
